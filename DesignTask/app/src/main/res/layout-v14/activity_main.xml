<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/text_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="311dp"
                android:orientation="vertical"
                android:paddingStart="61dp"
                android:paddingTop="32dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="@string/size"
                    android:textAllCaps="true"
                    android:textColor="#816A55"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="8dp"
                        app:srcCompat="@drawable/cup3" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="8dp"
                        app:srcCompat="@drawable/cup2" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:srcCompat="@drawable/cup" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/cups"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:srcCompat="@drawable/cup2" />

                    <TextView
                        android:id="@+id/textVie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@string/x4"
                        android:textAllCaps="true"
                        android:textColor="#A79D9B"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/total"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_38"
                    android:textAllCaps="true"
                    android:textColor="#A79D9B"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cup_iv"
                android:layout_width="185dp"
                android:layout_height="311dp"
                app:srcCompat="@drawable/bitmap" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/latte_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="late macchiato"
                android:textAllCaps="true"
                android:textColor="#A56905"
                android:textSize="39sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text"
                android:layout_width="234dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="@string/our_latte_macchiato_and_classic_latte_also_called_a_caff_latte_have_the_same_two_ingredients_milk_and_espresso_but_the_craft_of_our_baristas_is_what_makes_each_drink_unique_explore_the_differences"
                android:textColor="#A79D9B"
                android:textSize="12sp" />

            <Button
                android:layout_width="154sp"
                android:layout_height="39sp"
                android:layout_gravity="center"
                android:background="#63A8A6"
                android:text="@string/add_to_cart"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
